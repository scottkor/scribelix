<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  
  <td class="micropost">
    <span class="user">
      <%= link_to h(feed_item.user.name), feed_item.user %>
    </span>
	
    <span class="content"><%= h feed_item.title %></span>
		<% if feed_item.created_at == feed_item.updated_at %>
      <span class="timestamp">
	    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
      </span>
	<% end %>
	
    <% if feed_item.created_at != feed_item.updated_at %>
      <span class="timestamp">
	  	Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	    +Updated <%= time_ago_in_words(feed_item.updated_at) %> ago.
	  </span>
	<% end %>
	
  </td>
  
  
  <% if current_user?(feed_item.user) %>
  <td>
    
    <%= link_to "delete", feed_item, :method => :delete,
                                     :confirm => "You sure?" %>
  </td>
  <% end %>
</tr>