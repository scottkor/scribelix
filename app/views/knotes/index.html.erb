<h1>Listing knotes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @knotes.each do |knote| %>
  <tr>
    <td><%=h knote.title %></td>
    <td><%=h knote.content %></td>
    <td><%= link_to 'Show', knote %></td>
    <td><%= link_to 'Edit', edit_knote_path(knote) %></td>
    <td><%= link_to 'Destroy', knote, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New knote', new_knote_path %>